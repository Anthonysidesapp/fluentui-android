<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_enabled="false">
    <shape>
        <solid android:color="?attr/fluentuiButtonBorderlessBackgroundDisabledColor"/>
        <corners android:radius="@dimen/fluentui_button_corner_radius" />
        <stroke
            android:width="2dp"
            android:color="@color/fluentui_gray_50" />
    </shape>
</item>
<item>
    <ripple android:color="?attr/fluentuiButtonBorderlessBackgroundPressedColor" >
        <item android:id="@android:id/mask" android:drawable="@android:color/white" >
        </item>
        <item>
            <shape>
                <solid android:color="?attr/fluentuiButtonBorderlessBackgroundDefaultColor"/>
                <corners android:radius="@dimen/fluentui_button_corner_radius" />
                <stroke
                    android:width="2dp"
                    android:color="#C7E0F4" />
            </shape>
        </item>
    </ripple>
</item>
</selector>